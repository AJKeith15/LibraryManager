//- update-book view includes error and form views

extends layout

block content
    h1="Update Book: " + title
    form(action="/books/" + book.id, method="post")
        include error
        include form
        input(type="submit" value="Update Book")
        br
        p
            a(class="button", href="/") Cancel
    form(action="/books/" + book.id + "/delete", method="post")
        input(class="button", href="/books", type="submit", value="Delete Book")